* 
  margin 0
  padding 0
  outline none
  box-sizing border-box

html  
  width 100%
  height 100%
  position relative

body 
  background rgb(250,250,250)
  color #444
  -webkit-font-smoothing antialiased
  font-family: 'Lato', sans-serif;
  text-rendering optimizeLegibility
  width 100%
  min-height 100%
  font-size 62.5%
    
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n
  

button::-moz-focus-inner {
  padding: 0;
  border: 0;
  margin-top: -2px;
  margin-bottom: -2px;
}

select::-moz-focus-inner {
  padding: 0;
  border: 0;
  margin-top: -2px;
  margin-bottom: -2px;
}

.wrapper
  display block
  overflow hidden
  color rgb(90,90,90)
  min-height 100%


    
  